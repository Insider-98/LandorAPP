<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LandorApp" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorOrange</item>
        <item name="colorPrimaryDark">@color/colorDarkOrange</item>
        <item name="colorAccent">@color/colorAccentOrange</item>
        <item name="android:buttonStyle">@style/FRButton</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="FRButton" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:background">@color/colorOrange</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="customLandorTheme" parent="Theme.AppCompat.NoActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/colorOrange</item>
    <item name="colorPrimaryDark">@color/colorDarkOrange</item>
